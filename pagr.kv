#: import FloatLayout kivy.uix.floatlayout.FloatLayout

<Mygtukas@Button>:
    font_size: '20sp'
    color: 1, 1, 1, .8
    size_hint: 0.2, 0.1

<Tabbedpanel>:
    canvas:
        Color:
            rgba: 1, 1, 1, .7
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1, 1 #procentai: 1 - 100%, .5 - 50%
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Value'
        canvas:
            Color:
                rgba: 1, 1, 1, .6
            Rectangle:
                size: self.size
                pos: self.pos

        FloatLayout:
            RstDocument:
                text: "Calculates the resistance value according to color-code."
                size_hint: 1, .1
            Mygtukas:
                text: "4-band-code"
                pos_hint: {"x": 0, 'y': .9}
                on_press: root.fourbandcode()

            Mygtukas:
                text: "5-band-code"
                pos_hint: {"x": 0, 'y': .8}
                on_press: root.fivebandcode()

            Mygtukas:
                text: "6-band-code"
                pos_hint: {"x": 0, 'y': .7}
                on_press: root.sixbandcode()

            Image:
                allow_stretch: True
                source: "rezistorblanc12.png"
                pos_hint: {"x": 0.25, 'y': .25}
                size_hint: .6, .6
            Label:
                background_color: 1, 1, 1, .3
                text: root.rezultatas()
                base_font_size: '30sp'
                size_hint: .15, .1
                pos_hint: {"x": .45, "y": .25}



    TabbedPanelItem:
        text: 'Colors'
        canvas:
            Color:
                rgba: 1, 1, 1, .6
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            RstDocument:
                text:
                    "Calculates the color-code according to the value of the resistance."
