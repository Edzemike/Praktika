#: import FloatLayout kivy.uix.floatlayout.FloatLayout

<Mygtukas@Button>:
    font_size: '20sp'
    color: 1, 1, 1, .8
    size_hint: 0.2, 0.1

<MygtukasV@Button>:
    color: 0, 1, 0, 1
    size_hint: 0.04, .19


<Tabbedpanel>:
    canvas:
        Color:
            rgba: 1, 1, 1, .7
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1, 1 #procentai: 1 - 100%, .5 - 50%
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Value'
        canvas:
            Color:
                rgba: 1, 1, 1, .6
            Rectangle:
                size: self.size
                pos: self.pos
        FloatLayout:
            RstDocument:
                text: "Calculates the resistance value according to color-code."
                size_hint: 1, .1
            Mygtukas:
                id: keturiosj
                text: "4-band-code"
                pos_hint: {"x": 0, 'y': .9}
                on_press: VarzMyg3.disabled=True; VarzMyg6.disabled=True; VarzMyg3.background_color=(0, 1, 0, 0); VarzMyg6.background_color=(0, 1, 0, 0)
            Mygtukas:
                id: penkiosj
                text: "5-band-code"
                pos_hint: {"x": 0, 'y': .8}
                on_press: VarzMyg6.disabled; VarzMyg6.background_color=(0, 1, 0, 0); VarzMyg3.disabled=False; VarzMyg3.background_color=(0, 1, 0, 1)
            Mygtukas:
                id: sesiosj
                text: "6-band-code"
                pos_hint: {"x": 0, 'y': .7}
                on_press: VarzMyg6.disabled=False; VarzMyg6.background_color=(0, 1, 0, 1)
            Image:
                allow_stretch: True
                source: "Resistor_symbol.png"
                pos_hint: {"x": 0.25, 'y': .25}
                size_hint: .6, .6
            Label:
                background_color: 1, 1, 1, .3
                text: root.rezultatas()
                base_font_size: '30sp'
                size_hint: .15, .1
                pos_hint: {"x": .45, "y": .25}
            MygtukasV:
                id: VarzMyg1 #varzo mygtukas nr.1
                #text: "select"
                pos_hint: {"x": 0.35, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: background_color = root.popupwindow1()
            MygtukasV:
                id: VarzMyg2
                #text: "select"
                pos_hint: {"x": 0.42, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: root.popupwindow1()
            MygtukasV:
                id: VarzMyg3
                #text: "select"
                pos_hint: {"x": 0.49, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: root.popupwindow1()
            MygtukasV:
                id: VarzMyg4
                #text: "select"
                pos_hint: {"x": 0.56, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: root.popupwindow2()
            MygtukasV:
                id: VarzMyg5
                #text: "select"
                pos_hint: {"x": 0.63, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: root.popupwindow3()
            MygtukasV:
                id: VarzMyg6
                #text: "select"
                pos_hint: {"x": 0.7, 'y': .455}
                background_color: 0, 1, 0, 1
                background_normal: ''
                on_press: root.popupwindow4()

    TabbedPanelItem:
        text: 'Colors'
        canvas:
            Color:
                rgba: 1, 1, 1, .6
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            RstDocument:
                text:
                    "Calculates the color-code according to the value of the resistance."
